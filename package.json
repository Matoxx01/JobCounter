{
  "name": "cartoonjobcounter",
  "version": "1.0.0",
  "description": "Cartoon Job Counter - temporizador y registro semanal",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "dependencies": {
  },
  "devDependencies": {
    "electron": "^38.3.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9"
  },
  "build": {
    "appId": "com.barrios.cartoonjobcounter",
    "productName": "Cartoon Job Counter",
    "files": [
      "main.js",
      "preload.js",
      "data.json",
      "public/**",
      "assets/**",
      "build/**",
      "node_modules/**",
      "package.json"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/favicon.png"
    }
  }
}
